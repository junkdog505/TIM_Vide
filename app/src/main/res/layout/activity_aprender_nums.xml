<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AprenderNums"
    android:background="#507255">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:padding="16dp"
                android:text="Guía de Números en Braille"
                android:textColor="#C5E063"
                android:textSize="35sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/uno_foreground"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número 1: Se representa con un punto en la columna izquierda."
                    android:layout_marginTop="25dp"
                    android:justificationMode="inter_word"
                    android:textColor="#C5E063"
                    android:textSize="18dp"
                    android:layout_marginRight="35dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/dos_foreground"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número 2: Se representa con puntos en la columna izquierda y central."
                    android:layout_marginTop="25dp"
                    android:justificationMode="inter_word"
                    android:textColor="#C5E063"
                    android:textSize="18dp"
                    android:layout_marginRight="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/tres_foreground"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número 3: Se representa con puntos en la columna izquierda y derecha."
                    android:layout_marginTop="25dp"
                    android:justificationMode="inter_word"
                    android:textColor="#C5E063"
                    android:textSize="18dp"
                    android:layout_marginRight="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/cuatro_foreground"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número 4: Se representa con puntos en las dos columnas izquierda y derecha."
                    android:layout_marginTop="25dp"
                    android:justificationMode="inter_word"
                    android:textColor="#C5E063"
                    android:textSize="18dp"
                    android:layout_marginRight="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/cinco_foreground"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número 5: Se representa con puntos en las columnas central y derecha."
                    android:layout_marginTop="25dp"
                    android:justificationMode="inter_word"
                    android:textColor="#C5E063"
                    android:textSize="18dp"
                    android:layout_marginRight="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/seis_foreground"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número 6: Se representa con puntos en las tres columnas centrales."
                    android:layout_marginTop="25dp"
                    android:justificationMode="inter_word"
                    android:textColor="#C5E063"
                    android:textSize="18dp"
                    android:layout_marginRight="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/siete_foreground"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número 7: Se representa con puntos en las tres columnas centrales y el punto inferior izquierdo."
                    android:layout_marginTop="25dp"
                    android:justificationMode="inter_word"
                    android:textColor="#C5E063"
                    android:textSize="18dp"
                    android:layout_marginRight="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ocho_foreground"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número 8: Se representa con puntos en las tres columnas centrales y el punto inferior derecho."
                    android:layout_marginTop="25dp"
                    android:justificationMode="inter_word"
                    android:textColor="#C5E063"
                    android:textSize="18dp"
                    android:layout_marginRight="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/nueve_foreground"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número 9: Se representa con puntos en las tres columnas centrales y los puntos inferiores izquierdo y derecho."
                    android:layout_marginTop="25dp"
                    android:justificationMode="inter_word"
                    android:textColor="#C5E063"
                    android:textSize="18dp"
                    android:layout_marginRight="35dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/cero_foreground"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número 0: Se representa con puntos en las tres columnas superiores."
                    android:layout_marginTop="25dp"
                    android:justificationMode="inter_word"
                    android:textColor="#C5E063"
                    android:textSize="18dp"
                    android:layout_marginRight="35dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
