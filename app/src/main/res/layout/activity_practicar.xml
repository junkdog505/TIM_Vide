<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practicar"
    android:background="#07224f">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/button7"
                android:layout_width="350dp"
                android:layout_height="89dp"
                android:text="Ayuda"
                app:cornerRadius="25dp"
                android:textSize="35dp"
                android:textAllCaps="false"
                app:backgroundTint="@null"
                android:background="@drawable/custom_button"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnLetras"
                android:layout_width="350dp"
                android:layout_height="89dp"
                android:text="Letras"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="#FDCE24"
                android:textAllCaps="false"
                android:textColor="#FDCE24"
                android:textSize="40sp"
                app:cornerRadius="25dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnNumeros"
                android:layout_width="350dp"
                android:layout_height="89dp"
                android:text="NÃºmeros"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="#FDCE24"
                android:textAllCaps="false"
                android:textColor="#FDCE24"
                android:textSize="40sp"
                app:cornerRadius="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnSignos"
                android:layout_width="350dp"
                android:layout_height="89dp"
                android:text="Signos"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="#FDCE24"
                android:textAllCaps="false"
                android:textColor="#FDCE24"
                android:textSize="40sp"
                app:cornerRadius="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnPalabras"
                android:layout_width="350dp"
                android:layout_height="89dp"
                android:text="Palabras"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeColor="#FDCE24"
                android:textAllCaps="false"
                android:textColor="#FDCE24"
                android:textSize="40sp"
                app:cornerRadius="25dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>